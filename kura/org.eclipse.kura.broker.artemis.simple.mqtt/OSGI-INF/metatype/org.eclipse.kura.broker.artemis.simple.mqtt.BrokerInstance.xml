<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
	<OCD
		id="org.eclipse.kura.broker.artemis.simple.mqtt.BrokerInstance"
		name="Simple Artemis MQTT Broker"
		description="A simple MQTT broker instance based on Apache ActiveMQ Artemis">

		<AD
			id="enabled"
			name="Enabled"
			type="Boolean"
			cardinality="1"
			required="true"
			default="false"
			description="Enables the broker instance">
		</AD>

		<AD
			id="address"
			name="MQTT address"
			description="MQTT broker listener address"
			type="String"
			cardinality="1"
			required="false"
			default="localhost" />

		<AD
			id="port"
			name="MQTT port"
			description="MQTT broker port"
			type="Integer"
			cardinality="1"
			required="true"
			default="1883" />

		<AD
			id="users"
			name="User configuration"
			description="User configuration in the format: user=password|role1,role2,...|TextArea"
			type="String"
			cardinality="1"
			required="true" />

		<AD
			id="defaultUser"
			name="Default user name"
			description="The name of the default user"
			type="String"
			cardinality="1"
			required="false" />

	</OCD>

	<Designate pid="org.eclipse.kura.broker.artemis.simple.mqtt.BrokerInstance">
		<Object ocdref="org.eclipse.kura.broker.artemis.simple.mqtt.BrokerInstance" />
	</Designate>
</MetaData>
